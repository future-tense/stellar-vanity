{
  "compilerOptions": {
    "esModuleInterop": true,
    "removeComments": true,
    "stripInternal": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,       //  stellar-sdk
    "declaration": true,
    "sourceMap": false,
    "target": "es2020",
    "module":"NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "es6", "dom"
    ],
    "baseUrl": "../../",
    "outDir": "dest"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}